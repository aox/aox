SubDir TOP doc ;
SubInclude TOP core ;
SubInclude TOP doc readme ;


rule Man {
    local s t d ;

    d = [ FDirName $(TOP) doc man man$(<) ] ;
    for s in $(>) {
        t = $(s:S=.$(<)) ;

        MakeLocate $(t) : $(d) ;
        EngraveConfig $(t) : $(s) ;
        Depends $(t) : $(s) <>Jamsettings ;
        Depends exe : $(t) ;
        SEARCH on $(s) = $(SEARCH_SOURCE) ;

        InstallFile $(MANDIR)/man$(<) : $(t) ;

        Clean clean : $(t) ;
    }
}

Man 5 : archiveopteryx.conf.man aoxsuper.conf.man ;

Man 7 : oryx.man ;

Man 8 :
    aoximport.man aox.man archiveopteryx.man deliver.man installer.man
    logd.man ms.man ocd.man recorder.man tlsproxy.man ;
